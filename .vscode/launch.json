{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug IRC Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/app", // Path to the compiled executable
            "args": [], // Add any command-line arguments if needed
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", // Path to GDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build IRC Project" // Reference to a task in tasks.json
        }
    ]
}